@model List<CouponViewModel>

@if (Model.Count() <= 0)
{
    <h2>There are currently no coupons</h2>
}
else
{
    <h1 class="text-center">There are <span class="text-danger">@Model.Count()</span> coupons</h1>

    <div class="row align-items-center justify-content-center">
        <div class="col-7">
            <hr class="bg-dark" />
            <table class="table table-striped table-hover border">
                <thead class="thead-dark">
                    <tr class="">
                        <th scope="col" class="col">Name</th>
                        <th scope="col">Discount value</th>
                        <th scope="col">Created on</th>
                        <th scope="col">Modified on</th>
                        <th scope="col">Used</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Discount</td>
                            <td>@item.CreatedOn</td>
                            <td>@item.ModifiedOn_17118018</td>
                            <td class="text-info font-weight-bolder">@item.IsUsed</td>
                            <td><a asp-area="Administration" asp-controller="Coupon" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
                            <td><a asp-area="Administration" asp-controller="Coupon" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <hr class="bg-dark" />

            <div>
                <a asp-area="Administration" asp-controller="Coupon" asp-action="Create" class="btn btn-success btn float-right ml-2">Create</a>
            </div>
        </div>

    </div>
}

