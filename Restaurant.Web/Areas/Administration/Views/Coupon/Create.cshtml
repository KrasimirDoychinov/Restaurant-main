@model CouponInputModel

<div class="row align-items-center justify-content-center">
    <div class="col-5">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="font-weight-bold "></label>
                <input asp-for="Name" class="form-control  border border-dark" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Discount" class="font-weight-bold "></label>
                <input asp-for="Discount" class="form-control border border-dark" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>

            <hr class="bg-dark" />
            <input type="submit" class="btn btn-success" value="Create" />

        </form>
    </div>
</div>



