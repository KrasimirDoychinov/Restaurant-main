@model List<ProductViewModel>

@if (Model.Count() <= 0)
{
    <h2>There are currently no products</h2>
}
else
{

    <h1 class="text-center">There are <span class="text-danger">@Model.Count()</span> products</h1>

    <div class="row align-items-center justify-content-center">
        <div class="col-12">
            <hr class="bg-dark" />
            <table class="table table-striped table-hover border">
                <thead class="thead-dark">
                    <tr class="text-light">
                        <th scope="col" class="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Dish type</th>
                        <th scope="col">Weight</th>
                        <th scope="col">Created on</th>
                        <th scope="col">Modified on</th>
                        <th scope="col">Ingredients used</th>
                        <th scope="col">Orders</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@(item.Name.Count() > 50 ? item.Name.Substring(0, 50) + "..." : item.Name)</td>
                        <td>@item.Price</td>
                        <td>@item.ProductType.ToString()</td>
                        <td>@item.Weight</td>
                        <td>@item.CreatedOn</td>
                        <td>@item.ModifiedOn_17118018</td>
                        <td class="text-info font-weight-bolder">@($"{item.Ingredients.Split(", ", StringSplitOptions.RemoveEmptyEntries).Count()} ingredient/s")</td>
                        <td class="text-info font-weight-bolder">@($"{item.Orders.Count()} order/s")</td>
                        <td><a asp-area="Administration" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
                        <td><a asp-area="Administration" asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a></td>
                    </tr>
                    }
                </tbody>
            </table>
            <hr class="bg-dark" />
            <div>
                <a asp-area="Administration" asp-controller="Product" asp-action="Create" class="btn btn-success btn float-right ml-2">Create</a>
            </div>
        </div>

    </div>
}

